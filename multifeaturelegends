<script src="http://cdn.leafletjs.com/leaflet-0.7/leaflet.js"></script>
<script>
var map = L.map('map').setView([6.65, 40. -2.15], 3);
mapLink = '<a href="http://openstreetmap.org">openstreetmap</a>,'+ '<a href="http://mapsnigeriainitiative.wordpress.com">mapsnigeriainitiative</a>';
L.tileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {attribution: ' &copy; ' + mapLink,maxZoom: 18}).addTo(map);


 L.polygon([[23.84, 1.17],[24.79, 3.11],[24.56, 3.78],[23.05, 6.94],[23.53, -3.34],[19.38, -0.10],[19.57, 4.84]], {fillColor:"#e9b50b", color:"#000", fillOpacity: 0.8, weight: 1}).
bindPopup("Name: Limada").addTo(map);L.polygon([[11.55, 25.36],[6.53, 25.08],[2.30, 28.32],[1.71, 33.82],[8.94, 36.51],[13.41, 35.68],[13.21, 27.77]], {fillColor:"#f45", color:"#000", fillOpacity: 0.8, weight: 1})
.bindPopup("Name: Mudodo").addTo(map);L.polygon([[-15.92, 20.62],[-20.07, 20.18],[-22.52, 21.60],[-23.75, 25.72],[-23.31, 31.09],[-18.33, 35.44],[-16.44, 38.88],[-11.65, 40.18]], 
{fillColor:"#e9b50b", color:"#000", fillOpacity: 0.8, weight: 1}).bindPopup("Name: Kinew").addTo(map);

L.polyline([[3.75,7.76],[4.89,6.90],[8.00,9.34],[10.11, 15.90],[19.57, 4.38],[8.77, 23.12]], {color:'#e9b50b', weight: 3}).addTo(map);
L.polyline([[2.85,4.76],[7.22,6.80],[11.00,9.34],[13.11, 15.90]], {color:'#f45', weight: 2}).addTo(map);

L.circleMarker([7.00, 9.00], {fillColor:'#FED976', color:'#fff', fillOpacity: 0.8}).addTo(map);
L.circleMarker([14.00, 10.00], {fillColor:'#FED976', color:'#fff', fillOpacity: 0.8}).addTo(map);
L.circleMarker([5.20, 12.00], {fillColor:'#FED976', color:'#fff', fillOpacity: 0.8}).addTo(map);
L.circleMarker([6.20, 5.00], {fillColor:'#316', color:'#fff', fillOpacity: 0.8}).addTo(map);
L.circleMarker([8.20, 11.56], {fillColor:'#316', color:'#fff', fillOpacity: 0.8}).addTo(map);

